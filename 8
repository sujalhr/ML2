from sklearn.datasets import load_iris
import numpy as np

X, y = load_iris(return_X_y=True)
E = X[:,0] < 5.0
prior = np.mean(y == 0)
pE = np.mean(E)
likelihood = np.mean(y[E] == 0)
posterior = likelihood * prior / pE
print("Prior=",prior," Likelihood=",likelihood," Posterior=",posterior)
print(f"If SepalLength < 5, the probability the flower is Setosa is {posterior:.3f}.")
